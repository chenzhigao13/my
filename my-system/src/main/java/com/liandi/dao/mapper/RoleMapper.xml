<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.liandi.dao.RoleMapper">

    <resultMap id="roleMap" type="com.liandi.dao.domain.RoleDO">
        <id property="id" column="id"/>
        <result property="roleName" column="role_name"/>
        <result property="roleCode" column="role_code"/>
        <collection property="powerList" column="id" select="com.liandi.dao.PowerMapper.listPowerByRoleId"
                    fetchType="lazy"/>
    </resultMap>

    <select id="listRoleByUserId" parameterType="java.lang.Long" resultMap="roleMap">
        select r.id, r.role_name, r.role_code
        from sys_role r,
             sys_user_role ur
        where r.id = ur.role_id
          and ur.user_id = #{userId}
    </select>

    <select id="listRoleCode" resultType="java.lang.String">
        select r.role_code
        from sys_role r
        where r.id in (select ur.role_id from sys_user_role ur where ur.user_id = #{userId})
    </select>


</mapper>